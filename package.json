{
  "name": "@sos-academy-platform/source",
  "version": "0.0.0",
  "license": "MIT",
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "dev": "turbo run dev --filter=server",
    "dev:backend": "turbo run dev --filter=server",
    "dev:admin": "turbo run dev --filter=admin",
    "dev:website": "turbo run dev --filter=website",
    "dev:hacker": "turbo run dev --filter=hacker",
    "dev:admin:full": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgGreen.bold\" \"pnpm:dev:backend\" \"pnpm:dev:admin\"",
    "build": "turbo run build",
    "build:backend": "turbo run build --filter=server",
    "build:admin": "turbo run build --filter=admin",
    "build:website": "turbo run build --filter=website",
    "build:hacker": "turbo run build --filter=hacker",
    "build:shared": "turbo run build --filter=@sos-academy/shared",
    "start": "turbo run start",
    "start:backend": "turbo run start --filter=server",
    "start:admin": "turbo run start --filter=admin",
    "start:website": "turbo run start --filter=website",
    "start:hacker": "turbo run start --filter=hacker",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint:all": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "seed": "cd apps/server && pnpm build:dev && node ../../dist/apps/server/main.js seed",
    "seed:clear": "cd apps/server && pnpm build:dev && node ../../dist/apps/server/main.js clear",
    "seed:reset": "cd apps/server && pnpm build:dev && node ../../dist/apps/server/main.js reset",
    "seed:status": "cd apps/server && pnpm build:dev && node ../../dist/apps/server/main.js status",
    "seed:admin": "curl -X POST ${API_URL:-http://localhost:4200}/api/seeder/admin/seed",
    "seed:admin:reset": "curl -X POST ${API_URL:-http://localhost:4200}/api/seeder/admin/reset",
    "clean": "rm -rf dist apps/*/dist apps/*/node_modules apps/*/.next apps/*/out libs/*/dist node_modules .turbo *.turbo coverage tmp out-tsc && echo 'âœ… Cleaned build artifacts and caches'",
    "clean:and:install": "pnpm clean && pnpm install"
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.7.9",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "autoprefixer": "^10.4.23",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "turbo": "^2.0.0",
    "typescript": "~5.7.2",
    "webpack": "^5.102.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,md}": [
      "biome format --write --no-errors-on-unmatched"
    ]
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.12",
      "koa@>=3.0.1 <3.0.3": ">=3.0.3",
      "validator": ">=13.15.22",
      "nodemailer": ">=7.0.11",
      "glob": ">=10.5.0",
      "qs": ">=6.14.1",
      "js-yaml": ">=4.1.1",
      "html-minifier": "npm:html-minifier-terser@^7.2.0"
    }
  },
  "dependencies": {
    "@nestjs/cli": "^10.0.2",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^11.0.4",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@sos-academy/shared": "workspace:*",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "css-select": "^5.1.0",
    "dotenv": "^17.2.3",
    "handlebars": "^4.7.8",
    "mongoose": "^8.14.2",
    "next": "16.1.1",
    "nodemailer": "^7.0.11",
    "nth-check": "^2.1.1",
    "react": "19.0.0",
    "react-countup": "^6.5.3",
    "react-dom": "19.0.0",
    "react-icons": "^5.5.0",
    "reflect-metadata": "^0.1.13",
    "resend": "^6.6.0",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^5.0.0",
    "tslib": "^2.3.0"
  }
}
