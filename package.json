{
  "name": "@sos-academy-platform/source",
  "version": "0.0.0",
  "license": "MIT",
  "packageManager": "pnpm@10.18.1",
  "scripts": {
    "dev": "npx nx dev server",
    "dev:backend": "npx nx dev server",
    "dev:admin": "npx nx dev admin",
    "dev:frontend": "npx nx dev frontend",
    "dev:admin:full": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgGreen.bold\" \"pnpm:dev:backend\" \"pnpm:dev:admin\"",
    "build:backend": "npx nx build server",
    "build:admin": "NODE_ENV=production npx nx build admin",
    "build:frontend": "NODE_ENV=production npx nx build frontend",
    "build:shared": "npx nx build shared",
    "build": "npx nx run-many --target=build --all --parallel=3",
    "start:backend": "npx nx start server",
    "start:admin": "npx nx start admin",
    "start:frontend": "npx nx start frontend",
    "start": "concurrently --kill-others-on-fail --prefix-colors \"bgBlue.bold,bgGreen.bold\" \"pnpm:start:backend\" \"pnpm:start:admin\"",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint . --diagnostic-level=error",
    "lint:all": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepare": "husky",
    "seed": "npx nx run server:build:development && node dist/apps/server/main.js seed",
    "seed:clear": "npx nx run server:build:development && node dist/apps/server/main.js clear",
    "seed:reset": "npx nx run server:build:development && node dist/apps/server/main.js reset",
    "seed:status": "npx nx run server:build:development && node dist/apps/server/main.js status",
    "seed:admin": "curl -X POST http://localhost:4200/api/seeder/admin/seed",
    "seed:admin:reset": "curl -X POST http://localhost:4200/api/seeder/admin/reset",
    "setup:admin-env": "echo 'NEXT_PUBLIC_API_URL=http://localhost:4200/api' > apps/admin/.env.local && echo 'âœ… Created apps/admin/.env.local'"
  },
  "private": true,
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.2",
    "@nx/jest": "22.0.4",
    "@nx/js": "22.0.2",
    "@nx/nest": "^21.0.3",
    "@nx/next": "21.6.2",
    "@nx/node": "21.0.3",
    "@nx/web": "21.0.3",
    "@nx/webpack": "21.0.3",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nx": "21.0.3",
    "postcss": "^8.5.6",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.4.5",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,md}": ["biome format --write --no-errors-on-unmatched"]
  },
  "pnpm": {
    "overrides": {
      "vite": "^7.1.12",
      "koa@>=3.0.1 <3.0.3": ">=3.0.3",
      "validator@<13.15.20": ">=13.15.20",
      "nodemailer@<7.0.7": ">=7.0.7",
      "html-minifier": "npm:html-minifier-terser@^7.2.0"
    }
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.2",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/mongoose": "^11.0.3",
    "@nestjs/platform-express": "^10.0.2",
    "@nestjs/swagger": "^7.4.2",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "cheerio": "^1.0.0-rc.12",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "css-select": "^5.1.0",
    "handlebars": "^4.7.8",
    "mongoose": "^8.14.2",
    "next": "15.4.7",
    "nodemailer": "^7.0.7",
    "nth-check": "^2.1.1",
    "react": "19.0.0",
    "react-countup": "^6.5.3",
    "react-dom": "19.0.0",
    "react-icons": "^5.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-ui-express": "^5.0.0"
  }
}
