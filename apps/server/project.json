{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nest start --watch --entryFile apps/server/src/main",
        "cwd": "apps/server"
      }
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/server",
        "main": "apps/server/src/main.ts",
        "tsConfig": "apps/server/tsconfig.app.json",
        "webpackConfig": "apps/server/webpack.config.js",
        "assets": [
          "apps/server/src/assets",
          {
            "glob": "**/*.hbs",
            "input": "apps/server/src/modules/email/templates/",
            "output": "./templates/"
          }
        ]
      },
      "configurations": {
        "development": {
          "optimization": false
        },
        "production": {
          "optimization": true,
          "extractLicenses": true
        }
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node dist/apps/server/main.js"
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register apps/server/src/seed.ts seed"
      }
    },
    "seed:clear": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register apps/server/src/seed.ts clear"
      }
    },
    "seed:reset": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register apps/server/src/seed.ts reset"
      }
    },
    "seed:status": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node -r tsconfig-paths/register apps/server/src/seed.ts status"
      }
    }
  }
}
