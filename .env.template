# SOS Academy Platform Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# =============================================================================

# SendGrid API Key (Required for email functionality)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# GitHub API Token (Optional - for GitHub profile fetching)
GITHUB_TOKEN=your_github_token_here

# =============================================================================
# BACKEND ENVIRONMENT VARIABLES
# =============================================================================

# Server Configuration
PORT=4200
NODE_ENV=production

# Database
MONGODB_URI=mongodb://admin:password@mongodb:27017/sos-academy?authSource=admin

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Email Configuration (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key_here
EMAIL_FROM=no-reply@sos-academy.org

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# =============================================================================

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4200/api
BASE_SERVER_URL=http://localhost:4200

# =============================================================================
# DEVELOPMENT OVERRIDES (for local development)
# =============================================================================

# Uncomment these for local development without Docker
# MONGODB_URI=mongodb://localhost:27017/sos-academy
# CORS_ORIGIN=http://localhost:3000
# NEXT_PUBLIC_API_URL=http://localhost:4200/api
