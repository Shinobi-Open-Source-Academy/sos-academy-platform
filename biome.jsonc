{
  "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/*.d.ts"],
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error"
      },
      "style": {
        "useConst": "error",
        "useBlockStatements": "error"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noUselessConstructor": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "warn",
        "noThenProperty": "off",
        "noDuplicateFontNames": "warn"
      },
      "a11y": {
        "useButtonType": "warn",
        "noSvgWithoutTitle": "warn",
        "useSemanticElements": "warn"
      }
    }
  },
  "files": {
    "ignore": [
      ".nx/**",
      "dist/**",
      "node_modules/**",
      ".next/**",
      "coverage/**",
      "*.min.js",
      "*.min.css",
      "pnpm-lock.yaml",
      "package-lock.json",
      "yarn.lock",
      "**/*.interface.js",
      "**/*.enum.js",
      "**/*.js.map"
    ],
    "maxSize": 1048576
  },
  "overrides": [
    {
      "include": ["**/*.spec.ts", "**/*.test.ts", "**/__tests__/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          }
        }
      }
    },
    {
      "include": ["**/*.d.ts", "**/index.d.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "include": ["apps/admin/**/*.ts", "apps/admin/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useButtonType": "warn"
          },
          "suspicious": {
            "noArrayIndexKey": "warn"
          }
        }
      }
    },
    {
      "include": ["**/components/icons/**/*.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "noSvgWithoutTitle": "warn"
          }
        }
      }
    },
    {
      "include": ["apps/frontend/app/components/**/*.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noArrayIndexKey": "warn"
          }
        }
      }
    },
    {
      "include": [".github/workflows/**/*.yml", ".github/workflows/**/*.yaml"],
      "formatter": {
        "enabled": false
      },
      "linter": {
        "enabled": false
      }
    },
    {
      "include": ["**/migrations/**/*.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "include": ["apps/**/src/**/*.ts", "dev-apps/**/src/**/*.ts", "packages/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useImportType": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
